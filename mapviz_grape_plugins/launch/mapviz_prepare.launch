<launch>

  <param name="use_sim_time" value="true"/>

  <env name="ROSCONSOLE_FORMAT" value="[${thread}] [${node}/${function}:${line}]: ${message}"/>

  <node pkg="swri_transform_util" type="initialize_origin.py" name="initialize_origin" >
    <param name="local_xy_frame" value="/far_field"/>
    <param name="local_xy_origin" value="mas_llunes"/>

    <rosparam param="local_xy_origins">
      [
       { name: mas_llunes,
         latitude: 42.341845,
         longitude: 3.058278,
         altitude: 200.0,
         heading: 0.0 },

         { name: eurecat,
           latitude: 41.488858,
           longitude: 2.126408,
           altitude: 100.0,
           heading: 0.0 }
      ]
    </rosparam>

  </node>

<!--  <node pkg="tf" type="static_transform_publisher" name="swri_transform" args="0 0 0 0 0 0 /far_field /eurecat 100"  />-->

  <node pkg="tf" type="static_transform_publisher" name="swri_transform" args="0 0 0 0 0 0 /far_field /origin 100"  />

  <!-- Needed only for searching for services -->
  <node pkg="rosapi" type="rosapi_node" name="rosapi"/>

</launch>
